<div class="banner-livre">
  <div class="pochette">
    <%= link_to livre_path(@livre), class:"grey-link" do %>
      <%= cl_image_tag @livre.pochette %>
    <% end %>
  </div>
  <div class="infos">
    <%= link_to livre_path(@livre), class:"grey-link" do %>
      <h1><%= @livre.titre %> </h1>
    <% end %>
    <h2>Lu par <%= @emprunt.user.prenom %>
      <%= link_to edit_livre_emprunt_path(@livre, @emprunt), class:"white-link" do %>
        <i class="fas fa-edit"></i></h2>
      <% end %>
  </div>
</div>
<div class="container">
  <p><strong>Date d'emprunt : </strong><%= @emprunt.date_debut %></p>
  <p><strong>Date de rendu : </strong><%= @emprunt.date_fin %></p>
  <p><strong>Avis : </strong><%= @emprunt.avis %></p>
  <p><strong>Note : </strong><%= @emprunt.note %></p>
</div>
