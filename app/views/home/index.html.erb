<div class="partie-haute">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <div class="new_books">
      <div class="carousel-inner">
        <% compteur = 0 %>
        <% Livre.last(3).reverse.each do | livre| %>
          <div class="item <%= compteur == 0 ? "active" : "" %> carousel-item">
            <div class="carou">
              <div class="carou-pochette">
                <% if livre.pochette.present? %>
                  <%= cl_image_tag livre.pochette, class: "pochette" %>
                <% end %>
              </div>
              <div class="carou-info">
                <h3> <%= livre.titre %></h3>
                <p>De : <%= livre.auteur %></p>
                <p>Proposé par : <%= livre.user.prenom %></p>
              </div>
            </div>
            <%= link_to "", livre_path(livre), class: 'carou-link' %>
            <% compteur += 1 %>
          </div>
      <% end %>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<div class="partie-basse">
  <div class="meilleurs-livres">
    <h1>Meilleurs livres</h1>
    <div class="podium">
      <div class="winner">
        <div class="pochette">
          <%= cl_image_tag @livres[1].pochette, class: "avatar-bordered avatar-classement" %>
        </div>
        <div class="number2">
          <h5 style="color: white; text-align: center;">2</h5>
        </div>
        <div class="titre">
          <p><%= @livres[1].titre %></p>
        </div>
      </div>
      <div class="winner">
        <div class="pochette">
          <%= cl_image_tag @livres[0].pochette, class: "avatar-bordered avatar-classement" %>
        </div>
        <div class="number1">
          <h5 style="color: white; text-align: center;">1</h5>
        </div>
        <div class="titre">
          <p><%= @livres[0].titre %></p>
        </div>
      </div>
      <div class="winner">
        <div class="pochette">
          <%= cl_image_tag @livres[2].pochette, class: "avatar-bordered avatar-classement" %>
        </div>
        <div class="number2">
          <h5 style="color: white; text-align: center;">3</h5>
        </div>
        <div class="titre">
          <p><%= @livres[2].titre %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="dernieres-notes">
    <h1>Dernières notes</h1>
    <% @emprunts.last(3).reverse.each do |emprunt| %>
      <div class="emprunt-note">
        <div class="emprunt-avatar">
          <% if emprunt.user.photo.present? %>
            <%= cl_image_tag emprunt.user.photo, class: "avatar" %><br>
            <%= emprunt.user.prenom %> <%= emprunt.user.nom %>
          <% else %>
            <%= image_tag('https://www.limestone.edu/sites/default/files/user.png', class: "avatar") %><br>
            <%= emprunt.user.prenom %> <%= emprunt.user.nom %>
          <% end %>
        </div>
        <div class="emprunt-detail">
          <% if emprunt.user.prenom.present? %>
            <h3><%= emprunt.livre.titre %></h3>
          <% else %>
            <h2><%= emprunt.user.email %></h2>
          <% end %>
          <p><%= emprunt.updated_at.strftime("%d/%m/%Y") %>
             -
            <% if emprunt.note != nil %>
                <% emprunt.note.times do  %>
                  <i class="fas fa-star"></i>
                <% end %>
              <% end %>
          </p>
          <p><i><%= emprunt.avis %></i></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
