<div class="banner">
  <h1>Le gang des lecteurs </h1>
</div>
<div class="container">
  <% @users.each do |user| %>
    <div class="user-list">
      <div class="row">
        <div class="col-xs-4">
          <%= cl_image_tag user.photo, class: "avatar" %>
        </div>
        <div class="col-xs-4">
          <h2><%= user.prenom %> <%= user.nom %></h2>
        </div>
        <div class="col-xs-4">
          <%= link_to user_path(user) do %>
            <i class="fas fa-arrow-circle-right"></i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
