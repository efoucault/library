<div class="container">
  <%= simple_form_for @livre do |f| %>
    <div class="formulaire">
      <%= f.input :titre %>
      <%= f.input :auteur %>
      <%= f.input :description %>
      <%= f.input :video %>
      <%= f.input :video_cache, as: :hidden %>
      <%= f.submit "Enregistrer", class: "btn btn-success"%>
    </div>
  <% end %>
</div>
